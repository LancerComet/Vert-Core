{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "../dist": ["./lib"],
      "../dist/*": ["./lib/*"]
    },
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016",
      "es2017"
    ]
  }
}
