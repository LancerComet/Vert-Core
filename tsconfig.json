{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES5",
    "declaration": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES5",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018"
    ]
  },
  "exclude": [
    "dist/**/*",
    "node_modules"
  ]
}
